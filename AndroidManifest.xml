<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.nastia.combinatoricscalculator">

    <application
        android:allowBackup="true"
        android:icon="@drawable/pascali"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PermutationsActivity"
            android:label="תמורות"
            android:parentActivityName=".MainActivity"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nastia.combinatoricscalculator.MainActivity" />
        </activity>
        <activity
            android:name=".SubstitutesActivity"
            android:label="חליפות"
            android:parentActivityName=".MainActivity"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nastia.combinatoricscalculator.MainActivity" />
        </activity>
        <activity
            android:name=".CombinationsActivity"
            android:label="צירופים"
            android:parentActivityName=".MainActivity"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nastia.combinatoricscalculator.MainActivity" />
        </activity>
    </application>

</manifest>